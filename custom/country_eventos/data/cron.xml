<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

	    <!--cron para cancelar las invitaciones no asistidas pasado el dia-->
        <record id="cron_cancel_invitations" model="ir.cron">
            <field name="name">Cancelar invitaciones no asistidas</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
            <field name="model_id" ref="model_event_registration"/>
            <field name="state">code</field>
            <field name="code">model.cancel_invitation_due()</field>
            <field name="function">True</field>
        </record>
    </data>
</odoo>