<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
	    <record id="view_form_event_inherited_be" model="ir.ui.view">
            <field name="name">Extension de eventos</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form"/>
            <field name="arch" type="xml">
	            <field name="organizer_id" position="before">
	                <field name="event_type" required="1"/>
	            </field>
            </field>
        </record>

	    <record id="view_form_event_registration_inherited_be" model="ir.ui.view">
            <field name="name">Extension de Asistentes de eventos</field>
            <field name="model">event.registration</field>
            <field name="inherit_id" ref="event.view_event_registration_form"/>
            <field name="arch" type="xml">
	            <field name="date_closed" position="before">
	                <field name="date_invitation" required="1"/>
	            </field>
	            <field name="name" position="before">
		            <label id="vat" for="vat" string="Rif"/>
	                <div id="vat" class="">
	                    <field name="prefix_vat"/>
	                    <field name="vat"/>
	                </div>
	            </field>
            </field>
        </record>

	    <record id="view_tree_event_registration_inherited_be" model="ir.ui.view">
            <field name="name">Extension de Listado Asistentes de eventos</field>
            <field name="model">event.registration</field>
            <field name="inherit_id" ref="event.view_event_registration_tree"/>
            <field name="arch" type="xml">
	            <field name="name" position="before">
                    <field name="prefix_vat" string="Tipo Doc."/>
                    <field name="vat" string="Cedula/Rif"/>
	            </field>
            </field>
        </record>
    </data>
</odoo>