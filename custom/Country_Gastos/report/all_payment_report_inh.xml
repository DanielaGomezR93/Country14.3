<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="inh_all_payment_report" inherit_id="bin_advance_supplier_client.financial_all_payments">
          <xpath expr="(//div[@class='page']/table/thead/tr)" position="inside">
                        <t t-if="data.get('payment_type') == 'outbound'">
                            <th colspan="1"  class="text-center">Tipo</th>
                        </t>
                                               
          </xpath>
            <xpath expr="(//div[@class='page']/table/tbody/tr)" position="inside">
                        <t t-if="data.get('payment_type') == 'outbound'">
                            <t t-if="o.is_expense">  
                                <td style="text-align: center">
			                        <span>Gasto</span>
		                        </td>
                            </t>
                            <t t-if="not o.is_expense">  
                                <td style="text-align: center">
			                        <span>Pago</span>
		                        </td>
                            </t>
                        </t>
                                               
          </xpath>
        </template>
    </data>
</odoo>