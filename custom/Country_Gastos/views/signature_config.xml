<odoo>
    <data>

        <!--
        =====================================================
        Configurate
        =====================================================
        -->

        <!-- View Tree: Configurate -->
        <record id="view_configurate_tree_signature_expense" model="ir.ui.view">
            <field name="name">Configuración</field>
            <field name="model">hr_expense.signature_config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="description"/>
                    <field name="active" />
                </tree>
            </field>
        </record>

        <!-- View Form: Configuracion -->
        <record id="view_configurate_form_signature_expense" model="ir.ui.view">
            <field name="name">Configuración</field>
            <field name="model">hr_expense.signature_config</field>
            <field name="arch" type="xml">
                <form string="Configuración">
                    <sheet string="Configuración">
                    <group>
                   
                        <field name="description"/>
                        <field name="signature"  widget="image"/>
                        <field name="active"/>
                       
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Search View-->
        <record id="view_search_configurate_signature_expense" model="ir.ui.view">
            <field name="name">Configuración</field>
            <field name="model">hr_expense.signature_config</field>
            <field name="arch" type="xml">
                <search string="Configuración">
                    <filter name="active" domain="[('active','=',True)]" string="Activo"/>
                </search>
            </field>
        </record>

        <!--Configuracion de Vista: Configuracion-->
        <record id="action_configurate_signature_expense" model="ir.actions.act_window">
            <field name="name">Configuración</field>
            <field name="res_model">hr_expense.signature_config</field>
            <field name="type">ir.actions.act_window</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{"search_default_active":True}</field>
        </record>

        <menuitem name="Firma" id="hr_expense.configurate_signature_expense" parent="hr_expense.menu_hr_expense_configuration" action="action_configurate_signature_expense"/>



    </data>
</odoo>