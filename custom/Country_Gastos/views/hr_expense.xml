<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
	    <record id="view_hr_expense_inh" model="ir.ui.view">
            <field name="name">Extension de informe de gastos</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
            <field name="arch" type="xml">
                <button name="action_submit_sheet" position="after">
                    <button name="action_cancel" type="object" string="Cancelar" attrs="{'invisible':[('state','!=','done')]}"/>
                </button>
                <field name="accounting_date" position="after" >
                    <field name="journal_bank_account" readonly="1" force_save="1"/>
                    <field name="bank_transaction_number" attrs="{'readonly':[('state','not in',['draft','submit','approve'])]}"  force_save="1"/>
                
                </field>
            </field>
        </record>


    </data>
</odoo>