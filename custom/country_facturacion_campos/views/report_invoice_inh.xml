<odoo>
  <data>
            <template id="report_invoice_document_pdf_inh_binaural" 
                inherit_id="account.report_invoice_document" >
                <xpath expr="//div[@class='page']/h2" position="replace">
                    <h2 >
                        <span t-if="o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">Factura</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Factura Borrador</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Factura Cancelada</span>
                        <span t-if="o.type == 'out_refund'">Nota de crédito</span>
                        <span t-if="o.type == 'in_refund'">Nota de crédito de proveedor</span>
                        <span t-if="o.type == 'in_invoice'">Factura de proveedor</span>
                        <span t-if="o.type in ['out_invoice','out_refund','out_debit','out_contingence']" t-field="o.number"></span>
                        <span t-if="o.type in ['in_invoice','in_refund']" t-field="o.invoice_number"></span>
                        
                        
                    </h2>
                </xpath>

                 <xpath expr="//div[@name='reference']" position="replace">
                        <div name="reference" class="col-auto mw-100 mb-2" t-if="o.reference">
                            
                            <span t-if="o.type in ['out_invoice','out_refund','out_debit','out_contingence']"><strong>Referencia:</strong></span>
                            <span t-if="o.type in ['in_invoice','in_refund']"><strong>Nro Control:</strong></span>
                            <p class="m-0" t-field="o.reference"/>
                        </div>
                </xpath>

                <xpath expr="//div[@name='invoice_date']" position="before">
                        <div class="col-auto mw-100 mb-2" t-if="o.partner_id" name="partner_id">
                            <strong>Razón Social:</strong>
                            <p class="m-0" t-field="o.partner_id.business_name"/>
                            <span class="m-0" t-field="o.partner_id.prefix_vat"/><span class="m-0" t-field="o.partner_id.vat"/>
                        </div>
                        <t t-if="o.type in ['out_invoice','out_refund','out_debit','out_contingence']">
                            <div class="col-auto mw-100 mb-2" t-if="o.partner_id" name="action_number">
                                <strong>Nro Acción:</strong>
                                <p class="m-0" t-field="o.partner_id.action_number.number"/>
                            </div>
                        </t>
                </xpath>


                                        
            </template>


  </data>
</odoo>