            <field name="name">Actualizar la accion en los contactos</field>
            <field name="active" eval="False" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.update_action_contact()</field>
        </record>

	    <!--cron para actualizar el parentesco de socios y asociados-->
        <record id="cron_update_action_relationship_partner" model="ir.cron">
