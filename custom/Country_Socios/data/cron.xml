<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--cron para remover suspension automaticamente-->
        <record id="cron_remove_suspend_auto" model="ir.cron">
            <field name="name">Remover suspensión automaticamente</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
            <field name="model_id" ref="model_wizard_remove_suspend_partner"/>
            <field name="state">code</field>
            <field name="code">model.remove_suspend_auto()</field>

        </record>

        <!--cron para archivar socios automaticamente-->
        <record id="cron_archive_end_date_auto" model="ir.cron">
            <field name="name">Archivar socio automaticamente</field>
            <field name="active" eval="True" />
