            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.archive_members_auto()</field>

        </record>

        <!--cron para alerta de socios de fecha de fin-->
        <record id="cron_alert_end_date_auto" model="ir.cron">
            <field name="name">Alerta de fecha de fin de la acción</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model.alert_end_date_members_auto()</field>
        </record>

	    <!--cron para verificar la solvencia de los socios-->
