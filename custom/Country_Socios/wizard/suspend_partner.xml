    <record id="form_remove_suspend_partner_wiz" model="ir.ui.view">
        <field name="name">Remover suspension</field>
        <field name="model">wizard.remove.suspend.partner</field>
        <field name="arch" type="xml">
            <form string="Remover suspensión">
                
                    <group>
                        <group>
                            <div>¿Esta seguro de remover la suspensión de socios?</div>
                            <field name="partner_to_remove_suspend" invisible="1"/>
                        </group>
                    </group>
                                      
                <footer>
                    <button name="remove_suspend_partner" string="Remover suspensión" type="object" class="oe_highlight" />
                    <button string="Cancelar" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

	    
    </data>
