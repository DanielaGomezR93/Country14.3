<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_suspend_partner_wiz" model="ir.ui.view">
        <field name="name">Suspender</field>
        <field name="model">wizard.suspend.partner</field>
        <field name="arch" type="xml">
            <form string="Suspender">
                
                    <group>
                        <group>
                            <field name="reason" />
                            <field name="end_date_suspend" />
                            <field name="partner_to_suspend" invisible="1"/>
                        </group>
                    </group>
                                      
                <footer>
                    <button name="suspend_partner" string="Suspender" type="object" class="oe_highlight" />
                    <button string="Cancelar" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
