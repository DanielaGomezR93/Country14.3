<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="message_wizard_form" model="ir.ui.view">
        <field name="name">message.wizard.form</field>
        <field name="model">message.wizard</field>
        <field name="arch" type="xml">
            <form >
                <h4 class="text-center">
                    <field name="message" readonly="1"/>
                </h4>
            <footer>
                <button name="action_ok" string="Continuar" type="object" default_focus="1" class="oe_highlight"/> 
            </footer>
            </form>
        </field>
    </record>

        <record id="form_status_batch_wizard" model="ir.ui.view">
        <field name="name">Cambiar estado a socios</field>
        <field name="model">wizard.status.partner.batch</field>
        <field name="arch" type="xml">
            <form string="Cambiar estado de socios">
                
                    <group>
                        <group>
                            <field name="status" />
                            
                        </group>
                    </group>

                
                <notebook>
                    <page name="socios" string="Socios">
                            <field name="partners_ids" options="{'no_create': True}"/>
                    </page>
                </notebook>
                                      
                <footer>
                    <button name="change_status" string="Cambiar estado" type="object" class="oe_highlight" />
                    <button string="Cancelar" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_status_batch_wizard" model="ir.actions.act_window" >
        <field name="name">Cambiar estado de socio en lote</field>
        <field name="res_model">wizard.status.partner.batch</field>
        <field name="type">ir.actions.act_window</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field><!--inline-->
    </record>

	    <menuitem name="Estados de socios en lote" id="Country_Socios.action_status_batch_wizard_id" parent="Country_Socios.partners" action="action_status_batch_wizard"/>
    </data>
</odoo>