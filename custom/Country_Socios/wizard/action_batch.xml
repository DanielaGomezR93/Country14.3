<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_status_batch_wizard_action" model="ir.ui.view">
        <field name="name">Cambiar estado a acciones</field>
        <field name="model">wizard.status.action.batch</field>
        <field name="arch" type="xml">
            <form string="Cambiar estado de acciones">
                
                    <group>
                        <group>
                            <field name="status" />
                            
                        </group>
                    </group>

                
                <notebook>
                    <page name="acciones" string="Acciones">
                            <field name="actions_ids" options="{'no_create': True}"/>
                    </page>
                </notebook>
                                      
                <footer>
                    <button name="change_status" string="Cambiar estado" type="object" class="oe_highlight" />
                    <button string="Cancelar" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_status_batch_wizard_action" model="ir.actions.act_window" >
        <field name="name">Cambiar estado de acciones en lote</field>
        <field name="res_model">wizard.status.action.batch</field>
        <field name="type">ir.actions.act_window</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field><!--inline-->
    </record>

	    <menuitem name="Estados de acciones en lote" id="Country_Socios.action_status_batch_wizard_id_action" parent="Country_Socios.actions" action="action_status_batch_wizard_action"/>
    </data>
</odoo>