<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
	    <record id="view_tree_action" model="ir.ui.view">
            <field name="name">Configuraciones</field>
            <field name="model">country.config.members</field>
            <field name="arch" type="xml">
                <tree string="Configuraciones">
                    <field name="years_of_validity_member"/>
                    <field name="age_limit_for_associated_children"/>
                    <field name="previous_days_alert_associates"/>
                    <field name="out_email_alert_associates" />
                    <field name="active" />
                    <field name="company_id" />
                </tree>
            </field>
        </record>

		<record id="view_form_action" model="ir.ui.view">
            <field name="name">Configuraciones</field>
            <field name="model">country.config.members</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Acción">
                    <sheet>
                        <group>
	                        <group>
		                    <field name="years_of_validity_member"/>
                            <field name="age_limit_for_associated_children"/>
                            <field name="previous_days_alert_associates"/>
                            </group>
                            <group>
                            <field name="out_email_alert_associates" />
                            <field name="active" />
                            <field name="company_id" invisible="1"/>
                            </group>
                        </group>
                        
	                    <notebook >
                            <page invisible="1" string="Alerta de vencimiento" name="expiration_alert_config">
                                <group>
	                                <field name="expiration_alert_subject" />
                                    <field name="expiration_alert_body" widget="html"/>
                                   
	                            </group>
                            </page>
                            <page  invisible="1" name="extension_alert_config" string="Alerta de prórroga">
                                <group>
                                <field name="extension_alert_subject" />
                                <field name="extension_alert_body" widget="html"/>
                              
                                </group>
                            </page>
                            <page name="signature_mail" string="Firma de correos">
                                <field name="signature" widget="image"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

	    <record id="action_members_config"  model="ir.actions.act_window">
            <field name="name">Configuraciones</field>
            <field name="res_model">country.config.members</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>

	    <menuitem name="Configuraciones de socios" id="Country_Socios.members_config" parent="Country_Socios.menu_root" action="action_members_config"/>
    </data>
</odoo>