<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
	    <record id="view_tree_action" model="ir.ui.view">
            <field name="name">Acciones</field>
            <field name="model">action.partner</field>
            <field name="arch" type="xml">
                <tree string="Acciones">
                    <field name="type_action"/>
                    <field name="number"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

		<record id="view_form_action" model="ir.ui.view">
            <field name="name">Acciones</field>
            <field name="model">action.partner</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Acción">
                    <header>
                        <field name="state" widget="statusbar" nolabel="1"/>
                    </header>
                    <sheet>
                        <group>
	                        <group>
		                        <field name="type_action"/>
                                <field name="number"/>
                            </group>
                        </group>
	                    <notebook>
                            <page string="Socios Anteriores">
                                <group>
	                                <field name="partners_previous_ids" nolabel="1">
			                            <tree editable="bottom">
			                                <field name="name"/>
                                            <field name="identification"/>
			                                <field name="date_start"/>
                                            <field name="date_end"/>
			                            </tree>
			                        </field>
	                            </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
                
            </field>
        </record>

		<record id="view_search_action" model="ir.ui.view">
            <field name="name">Acciones</field>
            <field name="model">action.partner</field>
            <field name="arch" type="xml">
                <search string="Acciones">
                    
	                <field name="number" string="Número de Acción" filter_domain="[('number','=',self)]"/>

                    <separator/>
                    <filter string="Acción Activa" name="active_action" domain="[ ('state', '=', 'active')]"/>
                    <filter string="Acción Especial" name="special_action" domain="[('state', '=', 'special')]"/>
                    <filter string="Acción Honorario" name="honorary_action" domain="[('state', '=', 'honorary')]"/>
                    <filter string="Acción Tesorería" name="treasury_action" domain="[('state', '=', 'treasury')]"/>
                </search>
            </field>
        </record>

	    <record id="action_action"  model="ir.actions.act_window">
            <field name="name">Acciones</field>
            <field name="res_model">action.partner</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_search_action"/>
        </record>

	    <record id="country_action_partner_form" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'res_partner_search_mode': 'customer', 'default_customer_rank': 1}</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new customer in your address book
              </p><p>
                Odoo helps you easily track all activities related to a customer.
              </p>
            </field>
        </record>

	    <menuitem name="Socios" id="Country_Socios.menu_root" />

	    <menuitem name="Socios" id="Country_Socios.partners" parent="Country_Socios.menu_root" />
        <menuitem name="Listado de Socios" id="Country_Socios.partners_list" parent="Country_Socios.partners" action="country_action_partner_form"/>

	    <menuitem name="Acciones" id="Country_Socios.actions" parent="Country_Socios.menu_root" />
        <menuitem name="Listado de Acciones" id="Country_Socios.actions_list" parent="Country_Socios.actions" action="action_action"/>
    </data>
</odoo>