<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
	    <record id="view_account_payment_actions_form" model="ir.ui.view">
            <field name="name">Accion de socio</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="action_number" readonly="1" force_save="1"/>
                </field>
            </field>
        </record>

	    <record id="view_account_payment_actions_tree" model="ir.ui.view">
            <field name="name">Accion de socio</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="action_number" readonly="1"/>
                </field>
            </field>
        </record>

	    <record id="view_account_payment_actions_search" model="ir.ui.view">
            <field name="name">Accion de socio</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="action_number" string="Número de Acción" filter_domain="[('action_number','=',self)]"/>
                </field>
            </field>
        </record>

	    <record id="view_account_payment_invoice_action_form" model="ir.ui.view">
            <field name="name">Accion de socio</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="action_number" readonly="1" force_save="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>